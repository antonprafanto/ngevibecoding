---
export interface Props {
  variant?: 'tip' | 'warn' | 'info' | 'success' | 'error';
  title?: string;
}

const { variant = 'info', title } = Astro.props;

const variants = {
  tip: {
    bg: 'bg-blue-50 dark:bg-blue-900/20',
    border: 'border-blue-200 dark:border-blue-800',
    icon: 'text-blue-500',
    titleColor: 'text-blue-800 dark:text-blue-300',
    textColor: 'text-blue-700 dark:text-blue-200'
  },
  warn: {
    bg: 'bg-yellow-50 dark:bg-yellow-900/20',
    border: 'border-yellow-200 dark:border-yellow-800',
    icon: 'text-yellow-500',
    titleColor: 'text-yellow-800 dark:text-yellow-300',
    textColor: 'text-yellow-700 dark:text-yellow-200'
  },
  info: {
    bg: 'bg-gray-50 dark:bg-gray-800/50',
    border: 'border-gray-200 dark:border-gray-700',
    icon: 'text-gray-500 dark:text-gray-400',
    titleColor: 'text-gray-800 dark:text-gray-300',
    textColor: 'text-gray-700 dark:text-gray-200'
  },
  success: {
    bg: 'bg-green-50 dark:bg-green-900/20',
    border: 'border-green-200 dark:border-green-800',
    icon: 'text-green-500',
    titleColor: 'text-green-800 dark:text-green-300',
    textColor: 'text-green-700 dark:text-green-200'
  },
  error: {
    bg: 'bg-red-50 dark:bg-red-900/20',
    border: 'border-red-200 dark:border-red-800',
    icon: 'text-red-500',
    titleColor: 'text-red-800 dark:text-red-300',
    textColor: 'text-red-700 dark:text-red-200'
  }
};

const style = variants[variant];

const icons = {
  tip: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>`,
  warn: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>`,
  info: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
  success: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
  error: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
};

const defaultTitles = {
  tip: 'üí° Pro Tips',
  warn: '‚ö†Ô∏è Perhatian',
  info: '‚ÑπÔ∏è Informasi',
  success: '‚úÖ Sukses',
  error: '‚ùå Error'
};
---

<div class={`rounded-lg border p-4 my-4 ${style.bg} ${style.border}`}>
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class={`w-5 h-5 ${style.icon}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <Fragment set:html={icons[variant]} />
      </svg>
    </div>
    <div class="ml-3">
      {title && (
        <h3 class={`text-sm font-medium ${style.titleColor} mb-2`}>
          {title}
        </h3>
      )}
      {!title && (
        <h3 class={`text-sm font-medium ${style.titleColor} mb-2`}>
          {defaultTitles[variant]}
        </h3>
      )}
      <div class={`text-sm ${style.textColor} prose prose-sm max-w-none`}>
        <slot />
      </div>
    </div>
  </div>
</div>