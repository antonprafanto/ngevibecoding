---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Belajar coding dengan AI - Dari nol sampai publish GitHub Pages", image = "/og-image.jpg" } = Astro.props;
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
    
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      
      .font-heading {
        font-family: 'Plus Jakarta Sans', sans-serif;
      }
    </style>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors">
    <slot />
    
    <!-- Import Global CSS -->
    <style is:global>
      /* Custom prose styles for content */
      .content h1 { 
        font-size: 1.875rem; 
        font-weight: 700; 
        font-family: 'Plus Jakarta Sans', sans-serif; 
        margin-bottom: 1rem; 
        margin-top: 2rem; 
      }
      .content h2 { 
        font-size: 1.5rem; 
        font-weight: 700; 
        font-family: 'Plus Jakarta Sans', sans-serif; 
        margin-bottom: 0.75rem; 
        margin-top: 1.5rem; 
        border-bottom: 1px solid #e5e7eb; 
        padding-bottom: 0.5rem; 
      }
      .dark .content h2 { border-bottom-color: #374151; }
      .content h3 { 
        font-size: 1.25rem; 
        font-weight: 600; 
        font-family: 'Plus Jakarta Sans', sans-serif; 
        margin-bottom: 0.5rem; 
        margin-top: 1rem; 
      }
      .content p { margin-bottom: 1rem; line-height: 1.75; }
      .content ul, .content ol { margin-bottom: 1rem; margin-left: 1.5rem; }
      .content li { margin-bottom: 0.5rem; }
      .content a { 
        color: #2563eb; 
        text-decoration: underline; 
      }
      .dark .content a { color: #60a5fa; }
      .content a:hover { color: #1d4ed8; }
      .dark .content a:hover { color: #93c5fd; }
      .content blockquote { 
        border-left: 4px solid #3b82f6; 
        background-color: #eff6ff; 
        padding: 1rem; 
        margin-bottom: 1rem; 
        border-radius: 0 0.375rem 0.375rem 0; 
      }
      .dark .content blockquote { background-color: rgba(30, 58, 138, 0.2); }
      .content pre { 
        background-color: #f3f4f6; 
        padding: 1rem; 
        border-radius: 0.5rem; 
        margin-bottom: 1rem; 
        overflow-x: auto; 
      }
      .dark .content pre { background-color: #1f2937; }
      .content code { 
        background-color: #f3f4f6; 
        color: #2563eb; 
        padding: 0.125rem 0.25rem; 
        border-radius: 0.25rem; 
        font-size: 0.875rem; 
      }
      .dark .content code { 
        background-color: #1f2937; 
        color: #60a5fa; 
      }
      .content table { margin-bottom: 1rem; width: 100%; border-collapse: collapse; }
      .content th, .content td { 
        border: 1px solid #d1d5db; 
        padding: 0.5rem 1rem; 
      }
      .dark .content th, .dark .content td { border-color: #4b5563; }
      .content th { 
        background-color: #f3f4f6; 
        font-weight: 600; 
      }
      .dark .content th { background-color: #374151; }
    </style>
    
    <!-- Theme Toggle Script -->
    <script>
      // Theme toggle functionality
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }

      window.localStorage.setItem('theme', theme);
    </script>
  </body>
</html>